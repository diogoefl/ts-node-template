{
  "name": "template-typescript",
  "version": "0.1.0",
  "description": "Template Typescript",
  "main": "src/main.ts",
  "author": "Diogo Efl",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register src/main.ts",
    "start:watch": "nodemon",
    "start:prod": "yarn type-check && yarn build && node ./dist/main.js",
    "start:clean:prod": "yarn clean:dist && yarn start:prod",
    "start:prod:watch": "nodemon --exec yarn start:prod",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn run type-check -- --watch",
    "build": "yarn run build:types && yarn run build:js",
    "build:clean": "yarn clean:dist && yarn build",
    "build:watch": "nodemon --exec yarn build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline --copy-files",
    "clean:dist": "yarn rimraf dist/*"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "dotenv": "^8.2.0"
  }
}
